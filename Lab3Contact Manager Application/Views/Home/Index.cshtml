@model IEnumerable<Contact>
@{
    ViewBag.Title = "Contact Manager"; // ViewBag.Title = "Contact Manager" in index.cshtml will override layout.cshtml
}
<a asp-controller="Contact" asp-action="Add">Add Contact</a>
<table>
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
        <tbody>
            @foreach (Contact contact in Model)
            {
            <tr>
                <td>
                    <a asp-controller="Contact" asp-action="Details" 
                       asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.Firstname</a>
                </td>
                <td>
                    <a asp-controller="Contact" asp-action="Details" 
                       asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.Lastname</a>
                    }
                </td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category.Name</td>
            </tr>
            }
        </tbody>


</table>